<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%level [%thread] %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.netty" level="warn"></logger>

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>